* {
	box-sizing border-box
	margin 0
	padding 0
}
body {
	background url('../build/img/bg.png')
	color $color-cafe
	font-family $fuente-texto
	font-size 18px
	height 100vh
	overflow-x hidden
	width 100vw
	.body-container{
		height 100vh
		// overflow auto
		overflow hidden
		position relative
		width 100%
		@media $xxs{
			width 100vw
			overflow-x hidden !important
		}
		&.no-scroll{
			overflow hidden
		}
		&.isMobile{
			overflow-y auto
		}
		h2{
			color $color-cafe
			// display none
			font-family $fuente-titulo
			font-size 45px
			font-weight bold
			text-align center
			text-transform uppercase
		}
		p{
			line-height 1.2
			margin 1em auto
			text-align center
			width 40%
			@media $medium-xs{
				width 70%
			}
			@media $xs{
				text-align justify
				width 80%
			}
		}
		.brush-down{
			bottom 0
			height auto
			left 0
			position absolute
			width 100%
		}
		.brush-up{
			height auto
			left 0
			position absolute
			top 0
			width 100%
		}
		.golden-span{
			color $color-dorado
		}
		.title-holder{
			position relative
			width 100%
			h2, h3{
				opacity 0
			}
			img{
				height auto
				left 50%
				pointer-events none
				position absolute
				transform translateX(-50%)
			}
			.contacto-h2{
				top -20px
				width 450px
				@media $xs{
					width 420px
				}
				@media $xxs{
					width 380px
				}
			}
			.cortes-h2{
				top -60px
				width 450px
				@media $xs{
					width 350px
				}
				@media $xxs{
					width 300px
				}
			}
			.parrilla-h2{
				top -10px
				width 450px
				@media $xs{
					width 400px
				}
				@media $xxs{
					width 300px
				}
			}
			.us-h2{
				top -20px
				width 450px
				@media $xs{
					width 350px
				}
				@media $xxs{
					width 300px
				}
			}
		}
		.left
		.right{
			width 50%
			img{
				height auto
				width 100%
			}
		}
		footer{
			align-items center
			color $color-cafe
			display flex
			justify-content center
			padding 0 0 2em
			width 100%
			@media $medium-xs{
				flex-wrap wrap
				padding 0 0 1em
			}
			img{
				height auto
				width 70px
				@media $medium-xs{
					margin 0 auto
					width 80%
				}
			}
			a{
				margin-right 1em
				&:last-child{
					margin-right 0
				}
				@media $medium-xs{
					margin-right 0
					text-align center
				}
			}
			.footer-contact{
				width 230px
				@media $medium-xs{
					width 100%
				}
				p{
					margin 0
					padding 0
					text-align left
					width 100%
					@media $medium-xs{
						text-align center
					}
					.golden{
						color $color-dorado
					}
				}
			}
			.rights{
				margin 1em 0 0
				width auto
			}
		}
	}
}