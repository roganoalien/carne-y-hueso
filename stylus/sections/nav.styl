header {
	background transparent
	border-bottom 2px solid transparent
	height 80px
	left 0
	padding 0 2em
	position fixed
	top 0
	transition all 1s
	width 100%
	z-index 9
	&.scrolled{
		background url('../build/img/bg.png')
		box-shadow 0 2px 5px 7px rgba($color-cafe, .1)
		a{
			color $color-cafe
		}
		svg{
			fill $color-cafe
		}
	}
	.close-r-menu,
	svg{
		cursor pointer
	}
	nav{
		// align-items center
		display flex
		justify-content space-between
		height 100%
		width 100%
		@media $medium-xs{
			align-items center
			justify-content center
		}
		.logo-horizontal{
			h1{
				display none
			}
			.logo-horizontal-img{
				height auto
				width 140px
				@media $medium-xs{
					margin-top 15px
				}
			}
		}
		svg{
			display none
			fill $color-blanco
			height 50px
			margin-left 2em
			width 50px
			@media $medium-xs{
				display block
			}
		}
		ul{
			font-family $fuente-titulo-secundario
			padding 1.35em 0
			@media $medium-xs{
				display none
			}
			li{
				display inline-block
				a{
					border-bottom 2px solid transparent
					display block
					color $color-blanco
					height 100%
					padding .5em 1em
					text-decoration none
					width 100%
					transition all 1s ease
					&.selected{
						color $color-dorado
						border-bottom 2px solid $color-dorado
					}
					@media $medium-lg{
						font-size .75em
					}
				}
			}
		}
	}
	.r-nav{
		background rgba($color-cafe, .7)
		display none
		height 100vh
		opacity 0
		pointer-events none
		position fixed
		right -100%
		top 0
		width 100%
		transition all .5s ease-in-out
		z-index 9999
		@media $medium-xs{
			display block
		}
		&.active{
			opacity 1
			pointer-events auto
			right 0
		}
		.container{
			background url('../build/img/bg.png')
			box-shadow -5px 0 10px 5px rgba($color-cafe, .25)
			display flex
			flex-direction column
			height 100vh
			justify-content flex-start
			// pointer-events none
			position absolute
			right -100%
			text-align center
			transition right .5s ease-in-out
			top 0
			width 70%
			&.active{
				right 0
			}
			@media $xs{
				width 100%
			}
		}
		img{
			height auto
			margin 0 auto
			width 50%
		}
		ul{
			li{
				margin 1em 0
				a{
					color $color-cafe
					font-size 2em
					text-decoration none
				}
			}
		}
	}
}