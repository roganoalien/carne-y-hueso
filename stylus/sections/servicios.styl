.products {
	height auto
	padding 0
	margin 0
	width 100%
	.products-title{
		height 400px
		margin 0
		padding 0
		position relative
		width 100%
		h2{
			color $color-blanco
			left 50%
			position absolute
			top 50%
			transform translate(-50%, -50%)
			z-index 3
		}
		.bg-images-overlay{
			height 400px
			left 0
			position absolute
			top 0
			width 100%
			z-index 2
			ul{
				display flex
				height 100%
				li{
					background rgba($color-cafe, .5)
					height 100%
					margin 0 1%
					width 32%
					&:first-child{
						margin 0 0 0 1%
					}
					&:last-child{
						margin 0 1% 0 0
					}
				}
			}
		}
		.bg-images{
			display flex
			height 400px
			position relative
			width 100%
			z-index 1
			img{
				height auto
				margin 0 1%
				width 32%
				&:first-child{
					margin 0 0 0 1%
				}
				&:last-child{
					margin 0 1% 0 0
				}
			}
		}
	}
}