.products {
	height auto
	padding 0
	margin 0
	width 100%
	h3{
		color $color-dorado
		font-family $fuente-titulo
		font-size 45px
		font-weight 700
		text-align center
		text-transform uppercase
	}
	.products-title{
		height 400px
		margin 0
		padding 0
		position relative
		width 100%
		h2{
			color $color-blanco
			left 50%
			position absolute
			top 50%
			transform translate(-50%, -50%)
			z-index 3
		}
		.bg-images-overlay{
			height 400px
			left 0
			position absolute
			top 0
			width 100%
			z-index 2
			ul{
				display flex
				height 100%
				li{
					background rgba($color-cafe, .5)
					height 100%
					margin 0 1%
					width 32.666%
					&:first-child{
						margin 0 0 0 0
					}
					&:last-child{
						margin 0 0 0 0
					}
				}
			}
		}
		.bg-images{
			display flex
			height 400px
			position relative
			width 100%
			z-index 1
			img{
				height auto
				margin 0 1%
				width 32.666%
				&:first-child{
					margin 0 0 0 0
				}
				&:last-child{
					margin 0 0 0 0
				}
			}
		}
	}
	.products-description{
		padding 2em
		h3{
			text-align center
		}
		p{
			margin 1em auto
			text-align justify
			width 50%
		}
		.golden-span{
			color $color-dorado
		}
		.small{
			font-size: .7em
		}
	}
	.cuts-container{
		align-items center
		background $color-cafe
		cursor pointer
		display flex
		justify-content center
		height 60vh
		margin 0
		max-height 395px
		padding 0
		width 100%
		li{
			border-right 4px solid $color-blanco
			height 100%
			position relative
			width 25%
			&:last-child{
				border-right 0 solid transparent
			}
			&:hover {
				.cut-image{
					opacity 1
				}
			}
			.cut-image{
				background-size cover !important
				height 100%
				opacity .5
				position relative
				transition opacity .25s ease-in-out
				width 100%
				z-index 1
			}
			h4{
				color $color-blanco
				font-family $fuente-titulo
				font-size 25px
				font-weight 700
				left 50%
				position absolute
				text-align center
				text-shadow 3px 3px $color-cafe
				top 50%
				transform translate(-50%, -50%)
				width 100%
				z-index 2
			}
		}
	}
	.parrilla{
		align-items center
		background $color-cafe
		cursor pointer
		display flex
		justify-content center
		height 40vh
		margin 0
		max-height 295px
		padding 0
		width 100%
		li{
			border-right 4px solid $color-blanco
			height 100%
			position relative
			width 33.333%
			&:last-child{
				border-right 0 solid transparent
			}
			&:hover {
				.item-image{
					opacity 1
				}
			}
			.item-image{
				background-size cover !important
				height 100%
				opacity .5
				position relative
				transition opacity .25s ease-in-out
				width 100%
				z-index 1
			}
			h4{
				color $color-blanco
				font-family $fuente-titulo
				font-size 25px
				font-weight 700
				left 50%
				position absolute
				text-align center
				text-shadow 3px 3px $color-cafe
				top 50%
				transform translate(-50%, -50%)
				width 100%
				z-index 2
			}
		}
	}
}